<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_pofile_"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorblack"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".Home.Pofile_Activity">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:textAlignment="center"
        android:text="M O T I V I S I O N"
        android:textSize="18dp"
        android:id="@+id/motivision_label4"
        android:textColor="@color/white"/>

    <com.example.appsteam.motivision.XML_class.Rounded_ImageView
        android:id="@+id/imageView"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_below="@+id/motivision_label4"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp" />

    <TextView
        android:id="@+id/name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imageView"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:text="Name"
        android:textColor="@color/colowhite"
        android:textSize="20dp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/button1"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/name"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:background="@drawable/custom_button"
        android:text="edit   profile"
        android:textColor="@color/colowhite" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recycler"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/button1"
        android:layout_marginTop="20dp" />
    <com.roughike.bottombar.BottomBar
        android:id="@+id/bottombar2"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        app:bb_inActiveTabAlpha="0.6"
        app:bb_activeTabAlpha="1"
        android:layout_alignParentBottom="true"
        android:background="@color/colorblack"
        app:bb_activeTabColor="@color/colowhite"
        app:bb_inActiveTabColor="@color/colorgray"
        app:bb_tabXmlResource="@xml/button_bar" />

</RelativeLayout>
