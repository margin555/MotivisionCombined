<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppThemeSplash" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowBackground">@drawable/regbg</item>
        <item name="colorPrimary">@color/black</item>
        <item name="colorPrimaryDark">@color/reg_primary_dark</item>
    </style>

    <style name="AppThemelogin" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowBackground">@drawable/regbg</item>
        <item name="colorPrimary">@color/black</item>
        <item name="colorPrimaryDark">@color/reg_primary_dark</item>
        <!--<item name="colorAccent">@color/colorRegistrationXMLEditText</item>-->
    </style>

    <style name="LoginActivityTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowBackground">@drawable/regbg</item>
        <item name="colorPrimary">@color/black</item>
        <item name="colorPrimaryDark">@color/reg_primary_dark</item>
        <item name="colorControlActivated">@color/green</item>
        <item name="colorControlNormal">@color/black</item>
    </style>

    <style name="ProgressActivityTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowBackground">@drawable/regbg</item>
        <item name="colorPrimary">@color/black</item>
        <item name="colorPrimaryDark">@color/black</item>
        <item name="colorControlActivated">@color/green</item>
        <item name="colorControlNormal">@color/black</item>
    </style>

    <style name="spinnerItemStyle" parent="android:Widget.TextView.SpinnerItem">

    </style>

    <style name="spinnerDropDownItemStyle" parent="android:TextAppearance.Widget.TextView.SpinnerItem">

    </style>
    <style name="MyActionBarTheme" parent="@android:style/Widget.Holo.Light.ActionBar">
        <item name="colorPrimary">@color/colorblack</item>
        <item name="colorPrimaryDark">@color/colorblack</item>
        <item name="colorAccent">@color/colorPrimaryDark</item>
    </style>
    <style name="Hometheme" parent="Theme.AppCompat">
        <item name="colorPrimary">@color/colorblack</item>
        <item name="colorPrimaryDark">@color/colorblack</item>
        <item name="colorAccent">@color/colowhite</item>
    </style>
    <style name="mycustom_layout" parent="Widget.Design.TabLayout">
        <item name="tabIndicatorColor">@color/colowhite</item>
    </style>

    <style name="CaldroidDefaultDarkCalendarViewLayout">
        <item name="android:background">@color/colorblack</item>

    </style>

    <style name="CaldroidDefaultDarkMonthName" parent="CaldroidDefaultDarkMonthName">
        <item name="android:textColor">@color/colowhite</item>
    </style>
    <style name="EditText.custom" parent="Widget.AppCompat.EditText">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textColorHint">@color/colorgray</item>

    </style>
</resources>
